{
  "expo": {
    "name": "Pocket Weather",
    "description": "Pocket Weather (project initially named weather_App) is a React Native app, built with Expo, compatible for both Android and iOS mobile devices.",
    "slug": "weather_App",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./components/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./components/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./components/assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.Pocket.Weather",
      "permissions": [
        "ACCESS_COARSE_LOCATION", 
        "ACCESS_FINE_LOCATION", 
        "FOREGROUND_SERVICE"
      ],
      "versionCode": 3
    },
    "web": {
      "favicon": "./components/assets/favicon.png"
    }
  },
  "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-6911236672739271~6357442755",
    "ios_app_id": "ca-app-pub-xxxxxxxx~xxxxxxxx"
  }
}
